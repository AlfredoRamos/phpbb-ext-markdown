{
	"name": "alfredoramos/markdown",
	"type": "phpbb-extension",
	"description": "Markdown extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-markdown",
	"version": "0.7.0-beta",
	"time": "2019-03-12",
	"keywords": ["phpbb", "extension", "markdown", "litedown"],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@yandex.com",
			"homepage": "https://github.com/AlfredoRamos",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": ">=5.6",
		"composer/installers": "^1.6.0"
	},
	"require-dev": {
		"phing/phing": "^2.16.0",
		"pear/archive_tar": "^1.4.0"
	},
	"suggest": {
		"s9e/highlighter": "To add code syntax highlighting",
		"alfredoramos/highlightjs": "To add code syntax highlighting and optionally line numbers"
	},
	"extra": {
		"display-name": "Markdown",
		"soft-require": {
			"phpbb/phpbb": "~3.2.0"
		},
		"version-check": {
			"host": "alfredoramos.github.io",
			"directory": "/phpbb-extensions",
			"filename": "markdown.json",
			"ssl": true
		}
	}
}
